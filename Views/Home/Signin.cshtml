@model Sakura_Sushi.Models.Cliente

@{
    ViewData["Title"] = "Login";

}


<section>
    @using (Html.BeginForm("Cadatrar", "Clientes", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(Cliente => Cliente.Nome)
            @Html.EditorFor(Cliente => Cliente.Nome,  new { htmlAttributes = new { @class = "form-control" } })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(Cliente => Cliente.Email)
            @Html.EditorFor(Cliente => Cliente.Email,  new { htmlAttributes = new { @class = "form-control" } })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(Cliente => Cliente.Senha)
            @Html.EditorFor(Cliente => Cliente.Senha,  new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(Cliente => Cliente.CPF)
            @Html.EditorFor(Cliente => Cliente.CPF,  new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(Cliente => Cliente.Telefone)
            @Html.EditorFor(Cliente => Cliente.Telefone,  new { htmlAttributes = new { @class = "form-control" } })
        </div>
    }
</section>

@section Styles{
    <link rel="stylesheet" href="~/css/signin.css" />
}
@model Sakura_Sushi.Models.Cliente;

@{
    ViewData["Title"] = "Login";

}

<section class="sigin-container">
    <div class="form-container">

        <!-- Form Cadastro -->
        @using (Html.BeginForm(actionName: "Cadastrar", "Home", FormMethod.Post, new { @class="form-cadastro form-active" }))
        {

            <div class="form-texts">
                <h2>Criar conta</h2>
                <p>Informe seus dados aqui e crie sua conta Sakura Sushi.</p>
            </div>

            <div class="form-group">
                @Html.LabelFor(Cliente => Cliente.Nome)
                @Html.EditorFor(Cliente => Cliente.Nome,  new { htmlAttributes = new { @class = "form-control" } })
            </div>
            
            <div class="form-group">
                @Html.LabelFor(Cliente => Cliente.Email)
                @Html.EditorFor(Cliente => Cliente.Email,  new { htmlAttributes = new { @class = "form-control" } })
            </div>
            
            <div class="form-group">
                @Html.LabelFor(Cliente => Cliente.Senha)
                @Html.EditorFor(Cliente => Cliente.Senha,  new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(Cliente => Cliente.CPF)
                @Html.EditorFor(Cliente => Cliente.CPF,  new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(Cliente => Cliente.Telefone)
                @Html.EditorFor(Cliente => Cliente.Telefone,  new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                <button type="submit" class="form-button">Cadastrar</button>
            </div>
        }

        <!-- Form Login -->
        @using (Html.BeginForm("Entrar", "Clientes", FormMethod.Post, new { @class="form-login form-inactive" }))
            {

                <div class="form-texts">
                    <h2>Entrar</h2>
                    <p>Bem vindo(a) de volta! Entre com a sua conta Sakura Sushi já existente.</p>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(Cliente => Cliente.Email)
                    @Html.EditorFor(Cliente => Cliente.Email,  new { htmlAttributes = new { @class = "form-control" } })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(Cliente => Cliente.Senha)
                    @Html.EditorFor(Cliente => Cliente.Senha,  new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    <button type="submit" class="form-button">Entrar</button>
                </div>
            }

            <h3 class="toggle-button">Já possui conta?</h3>
    </div>

    <div class="banner-container"></div>
</section>

@section Styles{
    <link rel="stylesheet" href="~/css/signin.css" />
    <script src="~/js/signin.js" defer></script>
}